<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
	<div class="span5 offset4">
		<%= form_tag(sessions_path, method: "post") do %>

			<%= label_tag :email %>
			<%= text_field_tag "email" %>

			<%= label_tag :password %>
			<%= password_field_tag "password" %>

			<%= submit_tag "Log in", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>

