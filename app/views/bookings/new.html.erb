<% provide(:title, 'Reservation') %>
<div class="container">
  <div class="row marketing">

    <div class="span4">
      <%= image_tag('icons/calendar.png') %>
      <p>Reservieren Sie das Haus noch heute. </p>
      <p>
       <a class="btn smooth_anker" href="#reservation">Zur Reservation &raquo;</a></p>
     </div>

